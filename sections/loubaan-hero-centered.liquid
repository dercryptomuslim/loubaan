{{ 'section-loubaan-hero-centered.css' | asset_url | stylesheet_tag }}

<div class="loubaan-hero-centered {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="page-width">
    <div class="loubaan-hero-centered__container">
      <!-- Logo/Brand -->
      {%- if section.settings.show_logo and section.settings.logo != blank -%}
        <div class="loubaan-hero-centered__logo">
          <img src="{{ section.settings.logo | image_url: width: 200 }}" 
               alt="{{ shop.name }}" 
               loading="lazy">
        </div>
      {%- endif -%}

      <!-- Main Headline -->
      {%- if section.settings.heading != blank -%}
        <h1 class="loubaan-hero-centered__heading {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}

      <!-- Subheading -->
      {%- if section.settings.subheading != blank -%}
        <p class="loubaan-hero-centered__subheading">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}

      <!-- Value Proposition -->
      <div class="loubaan-hero-centered__value-prop">
        <div class="loubaan-hero-centered__value-item">
          <div class="loubaan-hero-centered__value-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <span>Premium D√ºfte</span>
        </div>
        
        <div class="loubaan-hero-centered__value-item loubaan-hero-centered__value-item--highlight">
          <div class="loubaan-hero-centered__value-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M16 12l-4-4-4 4"/>
            </svg>
          </div>
          <span><strong>Mehr kaufen = Mehr sparen</strong></span>
        </div>
        
        <div class="loubaan-hero-centered__value-item">
          <div class="loubaan-hero-centered__value-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 6L9 17l-5-5"/>
            </svg>
          </div>
          <span>+ Gratisprobe</span>
        </div>
      </div>

      <!-- Main CTA Buttons -->
      <div class="loubaan-hero-centered__buttons">
        {%- if section.settings.button_label_1 != blank -%}
          <a href="{{ section.settings.button_link_1 | default: '/collections/all' }}" 
             class="button button--primary button--large">
            {{ section.settings.button_label_1 }}
          </a>
        {%- endif -%}
        
        {%- if section.settings.button_label_2 != blank -%}
          <a href="{{ section.settings.button_link_2 | default: '/pages/duftfinder' }}" 
             class="button button--secondary button--large">
            {{ section.settings.button_label_2 }}
          </a>
        {%- endif -%}
      </div>

      <!-- Urgency & Savings Highlight -->
      {%- if section.settings.show_savings_highlight -%}
        <div class="loubaan-hero-centered__savings">
          <div class="loubaan-hero-centered__savings-content">
            <div class="loubaan-hero-centered__urgency-badge">
              üî• LIMITIERTES ANGEBOT
            </div>
            <span class="loubaan-hero-centered__savings-badge">
              üí∞ Bis zu 15% sparen + GRATIS Probe
            </span>
            <span class="loubaan-hero-centered__savings-text">
              Ab 2 Produkten automatisch - Nur f√ºr kurze Zeit!
            </span>
            <div class="loubaan-hero-centered__countdown">
              ‚è∞ <strong>Angebot l√§uft ab in:</strong>
              <span id="countdown-timer">2T 14H 23M</span>
            </div>
          </div>
        </div>
      {%- endif -%}

      <!-- Social Proof & Trust -->
      {%- if section.settings.show_trust_indicators -%}
        <div class="loubaan-hero-centered__social-proof">
          <div class="loubaan-hero-centered__reviews">
            <div class="loubaan-hero-centered__stars">
              ‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê
            </div>
            <span class="loubaan-hero-centered__review-text">
              <strong>4.8/5</strong> aus √ºber 2.847 Bewertungen
            </span>
          </div>
          
          <div class="loubaan-hero-centered__customers">
            <div class="loubaan-hero-centered__avatar-stack">
              <div class="avatar">M</div>
              <div class="avatar">A</div>
              <div class="avatar">S</div>
              <div class="avatar">L</div>
              <div class="avatar">+</div>
            </div>
            <span>√úber 10.000 zufriedene Kunden</span>
          </div>
        </div>

        <div class="loubaan-hero-centered__trust">
          <div class="loubaan-hero-centered__trust-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            <span>Versandkostenfrei ab 29‚Ç¨</span>
